@using SparkApp.Web.ViewModels.Genre
@using static SparkApp.Common.AppConstants
@model List<GenreViewModel>?

<h1>Genre index</h1>
@if (User.IsInRole(ModRoleName))
{
	<div class="col-md-12 bg-light text-right">
		<a asp-controller="Genre" asp-action="Add" class="btn btn-success btn-dark-text btn-rounded mb-3 w-10 p-8 fw-bold">Add a Genre</a>
	</div>
}

<h4>All Genres..</h4>
<hr />
@if (Model != null)
{
	@foreach (var g in Model)
	{
		<a asp-controller="Genre" asp-action="Details" asp-route-name="@g.Name">@g.Name</a>
		<hr />
	}
}