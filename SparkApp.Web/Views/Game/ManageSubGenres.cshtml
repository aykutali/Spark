@model SparkApp.Web.ViewModels.Game.AddSubGenresToGameInputModel

<h2>Manage sub genres of the @Model.Title</h2>

<form asp-action="ManageSubGenres" method="post">
	<input type="hidden" asp-for="Id"/>
	<input type="hidden" asp-for="Title"/>
	
	<h3>Select sub genres</h3>
	
	<div class="form-group">
		@for (int i = 0; i < Model.SubGenres.Count; i++)
		{
			<hr />
			<div class="form-check">
				<input type="hidden" asp-for="@Model.SubGenres[i].Id"/>
				<input type="hidden" asp-for="@Model.SubGenres[i].Name"/>
				<input type="checkbox" asp-for="@Model.SubGenres[i].IsSelected" class="form-check-input"/>
				<label class="form-check-label">@Model.SubGenres[i].Name</label>
			</div>
		}
		<hr/>
		<button type="submit" class="btn btn-primary">Confirm</button>
	</div>
</form>

