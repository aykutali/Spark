@using SparkApp.Web.ViewModels.Platform
@using static SparkApp.Common.AppConstants
@model List<PlatformViewModel>?

<h2>Platforms index</h2>
@if (User.IsInRole(ModRoleName))
{
	<div class="col-md-12 bg-light text-right">
		<a asp-controller="Platform" asp-action="Add" class="btn btn-success btn-dark-text btn-rounded mb-3 w-10 p-8 fw-bold">Add a Platform</a>
	</div>
}

<h4>All Platforms..</h4>
<hr />
@if (Model != null)
{
	@foreach (var p in Model)
	{
		<a asp-controller="Platform" asp-action="Details" asp-route-name="@p.Name">@p.Name</a>
		<hr />
	}
}