
@model SparkApp.Web.ViewModels.Director.AddDirectorInputModel;

<h2>Add a Director</h2>

<form asp-action="Add" method="post">
	<div>
		<label asp-for="Name">Director's Name</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="ImageUrl">Image url</label>
		<input asp-for="ImageUrl" class="form-control" />
		<span asp-validation-for="ImageUrl" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="About">About Director</label>
		<input asp-for="About" class="form-control" />
		<span asp-validation-for="About" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary mt-2">Add Director</button>
</form>

<a asp-action="Index">Back to Index</a>
