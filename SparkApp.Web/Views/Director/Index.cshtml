@using SparkApp.Web.ViewModels.Director
@model List<DirectorViewModel>

<h1>Director index</h1>
@if (User.IsInRole("Moderator"))
{
	<div class="col-md-12 bg-light text-right">
		<a asp-controller="Director" asp-action="Add" class="btn btn-success btn-dark-text btn-rounded mb-3 w-10 p-8 fw-bold">Add a Director</a>
	</div>
}

<h4>All Directors..</h4>
<hr />
@foreach (var d in @Model)
{
	<a asp-controller="Director" asp-action="Details" asp-route-id="@d.Name">@d.Name</a>
	<hr />
}